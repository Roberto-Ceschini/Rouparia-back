// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Colaborador {
  id         Int        @id @default(autoincrement())
  numero     Int     @unique
  nome       String
  qtd_pendente Int? @default(0)
  area_id    Int?
  vinculo_id Int?
  vinculo    Vinculo?      @relation(fields: [vinculo_id], references: [id], onDelete: SetNull)
  area       Area?      @relation(fields: [area_id], references: [id], onDelete: SetNull)
  registros  Registro[]
}

model Area {
  id            Int           @id @default(autoincrement())
  nome          String
  colaboradores Colaborador[]
}

model Vinculo {
  id            Int           @id @default(autoincrement())
  nome          String
  colaboradores Colaborador[]
}

model Registro {
  id             Int         @id @default(autoincrement())
  data           DateTime
  status         String
  quantidade     Int        @default(1)
  colaborador_id Int
  colaborador    Colaborador @relation(fields: [colaborador_id], references: [id], onDelete: Cascade)
}

model Admin {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
}

model Funcionario_rouparia {
  id       Int    @id @default(autoincrement())
  nome     String
  email    String @unique
  password String
}
